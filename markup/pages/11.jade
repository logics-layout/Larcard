extends main

block head
    - var headData = {title: "Главная"}
    - var breadcrumb = true
    - var headerData = { style: 'user'}

    link(href="%=static=%css/separate-css/slick.css", rel="stylesheet", type="text/css")

block content

    .desc-institution
        .container
            .desc-institution__table
                .desc-institution__table-cell.desc-institution__table-cell_img
                    .desc-institution__img: img(src='http://lorempixel.com/288/240/city?i=1')
                .desc-institution__table-cell.desc-institution__table-cell_desc
                    .desc-institution__titleTable
                        .desc-institution__titleTable-cell
                            .desc-institution__subTitle Кафе
                            .desc-institution__title Coffeeline
                        .desc-institution__titleTable-cell.desc-institution__titleTable-cell_textRight
                            .desc-institution__bonus
                                .desc-institution__bonus-title like-бонусов
                                .desc-institution__bonus-num: b.color-blue 370

                    .desc-institution__labels
                        .label-list.not-styleLink
                            .label-list__section: a(href='#').label-list__link-item: span Бар
                            .label-list__section: a(href='#').label-list__link-item: span Банкеты
                            .label-list__section: a(href='#').label-list__link-item: span Японская

                    .desc-institution__text Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt la veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proide est laborum.
                .desc-institution__table-cell.desc-institution__table-cell_contacts
                    .desc-institution__contacts.not-styleLink
                        .desc-institution__contacts-main
                            p.desc-institution__contacts-text
                                span.desc-institution__contacts-title Адрес:
                                b ул. Красной Армии, 10
                            p.desc-institution__contacts-text
                                span.desc-institution__contacts-title Телефон:
                                a(href='#'): b.color-black: span.color-black__title +7 (391) 252-99-49
                            p.desc-institution__contacts-text
                                span.desc-institution__contacts-title Сайт:
                                a(href='#'): b.color-black: span.color-black__title.color-black__title_viewBorder www.okean-grill.ru
                            .desc-institution__contacts-text
                                span.desc-institution__contacts-title Социальные сети:
                                ul.network
                                    li: a(href="#"): i.s-vk-blue
                                    li: a(href="#"): i.s-fs-blue

            .hr: hr

            .slider-list-photo.arrow-style
                -for(var i=0;i<12;i++)
                    .slider-list-photo__section
                        img(src='http://lorempixel.com/145/97/city?i=1'+i)
            br
            table
                thead
                    tr
                        th.text-center
                        th.text-center Понедельник
                        th.text-center Вторник
                        th.text-center Среда
                        th.text-center Четверг
                        th.text-center Пятница
                        th.text-center Субота
                        th.text-center Воскресенье
                tbody
                    -for(var i=0;i<3;i++)
                        tr
                            td.text-center.not-bg 12:00 - 16:00
                            td.text-center 5%
                            td.text-center 5%
                            td.text-center 5%
                            td.text-center 5%
                            td.text-center 5%
                            td.text-center 5%
                            td.text-center 5%

            br
            p: b Отзывы
            .reviews
                .reviews__list
                    -for(var i=1;i<3;i++)
                        .reviews__item
                            .reviews__item-profile
                                .reviews__item-profile-table
                                    .reviews__item-profile-table-cell
                                        .reviews__item-profile-ava: +img('/assets/header/ava', 'png')
